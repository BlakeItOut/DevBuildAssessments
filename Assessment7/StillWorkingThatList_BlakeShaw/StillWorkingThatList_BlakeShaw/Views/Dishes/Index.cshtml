@model IEnumerable<StillWorkingThatList_BlakeShaw.Models.Dish>

@{
    ViewBag.Title = "Dishes";
}

<h2>Dishes</h2>

<form asp-controller="Dishes" asp-action="Index">
    <p>
        <input type="text" name="SearchString">
        <input type="submit" value="Search" />
    </p>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PersonName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DishName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DishDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Option)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PersonName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DishName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DishDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Option)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DishID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DishID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DishID })
        </td>
    </tr>
}

</table>
